@model IJustWatched.Models.Review


<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="@Model.Author.PhotoUrl" alt="" style="width: 3em; height: 3em; object-fit: cover">
            <div class="media-body">
                <h4 class="mt-0">
                    <a asp-controller="User" asp-action="Index" asp-route-userId="@Model.Author.Id"
                       style="color: black">
                        @Model.Author
                    </a>
                </h4>
                <a class="mb-2" asp-controller="Review" asp-action="Index" 
                   asp-route-reviewId="@Model.Id">
                    <i> on @Model.CreationDateTime.ToString("dd/MM/yyyy")</i>
                </a>
                <h4>@Model.ReviewTitle</h4>
                <div style="line-height: 1.5em; max-height: 9em; overflow: hidden">
                    <markdown>@Model.Content</markdown>
                </div>
            </div>
        </div>
    </div>
</div>
