@model List<Review>
@{
    ViewData["Title"] = "Home Page";
}

   @if(User.Identity.IsAuthenticated)
   {
       <script>
            $("#header_avatar").attr("src","@ViewData["CurrentUserPic"]");
       </script>
       @if (Model.Count != 0)
       {
           <h3 style="text-align: center">Feed</h3>
           <div class="col-lg-auto col-md-10 mx-auto">
               @foreach (var post in Model)
               {
                   <partial name="_ReviewListItem" for="@post"/>
               }
               
               <!-- Pager -->
               <div class="clearfix">
                   <a class="btn btn-primary float-right" href="#">Older Posts →</a>
               </div>
           </div>
       }
       else
       {
           <h4 style="text-align: center">There's no new posts yet</h4>
       }
   }
   else
   {
       <div class="mt-5" style="text-align: center">
           <a asp-controller="Account" asp-action="Login">Login</a>
           <hr/>
           <a asp-controller="Account" asp-action="Register">Sign up</a>    
       </div>
   }
