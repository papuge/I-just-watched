@model List<Review>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>@Localizer["results"]</h2>
@if (Model.Count == 0)
{
    <h3 style="text-align: center">@Localizer["notFound"]</h3>
}
else
{
    foreach (var review in Model)
    {
        <partial name="_ReviewListItem" model="@review"/>
    }
}
