@model IJustWatched.ViewModels.ProfileViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>@Model.User.UserName</h2>

<button type="button" class="btn btn-default" id="btnFollowers">@Model.FollowersCount followers</button>
<button type="button" class="btn btn-default" id="btnFollowing">@Model.FollowingCount following</button>

@if (Model.IsCurrentUserPage == false)
{
  <submit type="button" class="btn btn-primary"></submit>
}

<!-- Modal Followers -->
<div class="modal fade" id="modalFollowers" role="dialog">
  <div class="modal-dialog">
    
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Followers</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body" style="overflow-y:auto">
          @if (Model.FollowingCount == 0)
          {
            <p>List is empty</p>
          }
          else
          {
            @foreach (var follower in Model.Followers)
            {
              <div class="media mb-3">
                <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/25x25" alt="">
                <div class="media-body">
                  <p>@follower.UserName<p/>
                </div>
              </div>
            }
          }
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal Following -->
  <div class="modal fade" id="modalFollowing" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Following</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body" style="overflow-y:auto">
          @if (Model.FollowingCount == 0)
          {
            <p>You don't follow anybody by now</p>
          }
          else
          {
            @foreach (var following in Model.Following)
            {
              <div class="media mb-3">
                <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/25x25" alt="">
                <div class="media-body">
                  <p>@following.UserName<p/>
                </div>
              </div>
            }
          }
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

<script>
$(document).ready(function(){
  $("#btnFollowers").click(function(){
    $("#modalFollowers").modal();
  });
  
  $("#btnFollowing").click ( function() {
    $("#modalFollowing").modal();   
  });
});
</script>