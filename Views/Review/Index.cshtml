@model IJustWatched.Models.Review

@{
    ViewBag.Title = "I Just Watched";
    Layout = "_Layout";
}

<div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4">@Model.ReviewTitle</h1>

        <!-- Author -->
        <p class="lead">
          by
          <a href="#">@Model.Author.UserName</a>
          on <b>@Model.ReviewFilm.Title</b>
        </p>

        <hr>

        <!-- Date/Time -->
        <p>Posted on @Model.CreationDateTime.ToString("HH:mm dd/MM/yyyy")</p>

        <hr>

        <!-- Post Content -->
        <markdown>@Model.Content</markdown>

        <hr>

        <!-- Comments Form -->
        <partial name="_NewComment"/>

        <!-- Single Comment -->
        @if (Model.Comments != null) {
            foreach (var comment in Model.Comments)
            {
              <partial name="_Comment"/>
            }
        }

</div>
