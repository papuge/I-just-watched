@model IJustWatched.ViewModels.RegisterViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = "Sign In";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IJustWatched</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="/docs/4.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="canonical" href="https://getbootstrap.com/docs/4.3/examples/floating-labels/">
</head>

<style type="text/css">
  BODY {text-align: center}
</style>

<body>
<div class="form-group col-md-6 mb-0 container">
    <form class="form-group m-5 md-3 p-5" method="post" asp-controller="Account" asp-action="Register">
        <div class="ml-2 mr-2 mt-4 text-center"></div>
        <h2 class="h3 font-weight-normal">@Localizer["signUpMain"]</h2>
        <div asp-validation-summary="ModelOnly" style="color:red"></div>
        <div class="mt-3 form-label-group">
            <label asp-for="Email" for="inputEmail" class="sr-only"></label>
            <input asp-for="Email" type="email" id="inputEmail" class="form-control"
                   placeholder="@Localizer["email"]">
            <span asp-validation-for="Email" style="color:red"></span>
        </div>
        <div class="mt-3 form-label-group">
            <label asp-for="Username" for="inputUsername" class="sr-only"></label>
            <input asp-for="Username" class="form-control" id="inputUsername"
                   placeholder="@Localizer["username"]">
            <span asp-validation-for="Username" style="color:red"></span>
        </div>
        <div class="mt-3 form-label-group">
            <label asp-for="BirthdayDate" class="sr-only"></label>
            <input asp-for="BirthdayDate" type="date" class="form-control"/>
        </div>
        <div class="mt-4 form-label-group">
            <label asp-for="Password" for="inputPassword" class="sr-only"></label>
            <input asp-for="Password" type="password" id="inputPassword" class="form-control"
                   placeholder="@Localizer["password"]">
            <span asp-validation-for="Password" style="color:red"></span>
        </div>
        <div class="mt-4 form-label-group">
            <label asp-for="PasswordConfirm" for="inputPassword" class="sr-only"></label>
            <input asp-for="PasswordConfirm" type="password" class="form-control"
                   placeholder="@Localizer["repPassword"]">
            <span asp-validation-for="PasswordConfirm" style="color:red"></span>
        </div>
        <button class="mt-3 btn btn-lg btn-primary btn-block" type="submit" width="300px">
            @Localizer["signUp"]
        </button>
        <div class="mt-4">
            <a asp-controller="Account" asp-action="Login">@Localizer["backLogin"]</a>
        </div>
    </form>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</div>
</body>

