@model IJustWatched.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<style type="text/css">
  BODY {text-align: center}
</style>

<body>
<div class="form-group col-md-6 mb-0 container">
    <form class="form-group m-5 p-5" method="post" asp-controller="Account" asp-action="Login"
          div asp-route-returnUrl="@Model.ReturnUrl">
        <div class="ml-2 mr-2 mt-4 text-center"></div>
        <h2 class="h3 font-weight-normal">Please sign in</h2>
        <div asp-validation-summary="ModelOnly" style="color:red"></div>
        <div class="mt-3 form-label-group">
            <label asp-for="Email" for="inputEmail" class="sr-only"></label>
            <input asp-for="Email" type="email" id="inputEmail" class="form-control"
                   placeholder="Email address">
            <span asp-validation-for="Email" style="color:red"></span>
        </div>
        <div class="mt-4 form-label-group">
            <label asp-for="Password" for="inputPassword" class="sr-only"></label>
            <input asp-for="Password" type="password" id="inputPassword" class="form-control"
                   placeholder="Password">
            <span asp-validation-for="Password" style="color:red"></span>
        </div>
        <div class="mt-3 text-left checkbox">
            <input asp-for="RememberMe" />
            <label asp-for="RememberMe"></label><br />
        </div>
        <button class="mt-3 btn btn-lg btn-primary btn-block" type="submit" width="300px">Sign in</button>
    </form>
    <p>Don't have an account?</p>
      <div class="m-1"></div>
    <p><a asp-controller="Account" asp-action="Register">Sign Up</a></p>
</div>
</body>